{
	"name": "perforce",
	"version": "0.0.3",
	"publisher": "slevesque",
	"engines": {
		"vscode": "*"
	},
	"description": "Perforce basic commands",
	"keywords": [
		"vscode",
		"perforce"
	],
	"icon": "icon.png",
	"main": "./perforce",
	"contributes": {
		"commands": [
			{
				"command": "perforce.menuFunctions",
				"title": "Show Perforce functions",
				"category": "Perforce"
			},
			{
				"command": "perforce.showOutput",
				"title": "Show Output",
				"category": "Perforce"
			},
			{
				"command": "perforce.add",
				"title": "add - Open a new file to add it to the depot",
				"category": "Perforce"
			},
			{
				"command": "perforce.edit",
				"title": "edit - Open an existing file for edit",
				"category": "Perforce"
			},
			{
				"command": "perforce.revert",
				"title": "revert - Discard changes from an opened file",
				"category": "Perforce"
			},
			{
				"command": "perforce.diff",
				"title": "diff - Display diff of client file with depot file",
				"category": "Perforce"
			}
		],
		"keybindings": [
			{
				"key": "alt+p space",
				"command": "perforce.menuFunctions"
			},
			{
				"key": "alt+p l",
				"command": "perforce.showOutput"
			},
			{
				"key": "alt+p a",
				"command": "perforce.add",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p e",
				"command": "perforce.edit",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p r",
				"command": "perforce.revert",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p d",
				"command": "perforce.diff",
				"when": "editorTextFocus"
			}
		],
		"outputChannels": [
			"Perforce Log"
		]
	},
	"devDependencies": {
		"vscode": "*"
	}
}