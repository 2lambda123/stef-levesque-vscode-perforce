{
	"name": "perforce",
	"version": "0.0.1",
	"publisher": "slevesque",
	"engines": {
		"vscode": "*"
	},
	"description": "Perforce basic commands",
	"keywords": [
		"vscode",
		"perforce"
	],
	"icon": "icon.png",
	"main": "./perforce",
	"contributes": {
		"commands": [
			{
				"command": "perforce.showOutput",
				"title": "Show Output",
				"category": "Perforce"
			},
			{
				"command": "perforce.add",
				"title": "Add file",
				"category": "Perforce"
			},
			{
				"command": "perforce.edit",
				"title": "Checkout file",
				"category": "Perforce"
			},
			{
				"command": "perforce.revert",
				"title": "Revert file",
				"category": "Perforce"
			},
			{
				"command": "perforce.diff",
				"title": "Diff file",
				"category": "Perforce"
			}
		],
		"keybindings": [
			{
				"key": "alt+p l",
				"command": "perforce.showOutput"
			},
			{
				"key": "alt+p a",
				"command": "perforce.add",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p e",
				"command": "perforce.edit",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p r",
				"command": "perforce.revert",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+p d",
				"command": "perforce.diff",
				"when": "editorTextFocus"
			}
		],
		"outputChannels": [
			"Perforce Log"
		]
	},
	"devDependencies": {
		"vscode": "*"
	}
}